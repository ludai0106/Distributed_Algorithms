
public class Message {
	private int sender;
    private int receiver;
    private String message;
    private Clock clock;

    public Message(int sender, int receiver, Clock clock,String message){
        this.sender = sender;
        this.receiver = receiver;
        this.clock = clock;
        this.message = message;
    }

    public int getSender(){
        return sender;
    }

    public int getReceiver(){
        return receiver;
    }

    public Clock getClock(){
        return clock;
    }
    
    public String getMessage(){
    	return message;
    }
    
    public String toStringBroadcast() {
		String s= "Broadcast: Process " + sender + " says " + message + " " +  clock.toString();
		return s;
	}

}
