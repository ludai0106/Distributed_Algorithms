import java.io.Serializable;

public class Message implements Serializable{
	/**
	 * 
	 */
	private static final long serialVersionUID = -1729196106619598407L;
	private String sender;
    private String receiver;
    private String message;
    private Clock clock;
    private int senderIndex;

    public Message(String sender, String receiver, Clock clock, String message, int index){
        this.sender = sender;
        this.receiver = receiver;
        this.clock = clock;
        this.message = message;
        this.senderIndex = index;
    }
    
	public Message(String sender, String message, Clock clock, int index) {
		this.sender = sender;
		this.message = message;
		this.clock = clock;
		this.senderIndex = index;
		
	}
	

    public String getSender(){
        return sender;
    }

    public String getReceiver(){
        return receiver;
    }

    public Clock getClock(){
        return clock;
    }
    
    public String getMessage(){
    	return message;
    }
    
    public int getSenderIndex(){
    	return senderIndex;
    }
    
    public String toStringBroadcast() {
		String s= "Process " + sender + " broadcast " + message + " " +  clock.toString();
		return s;
	}
    
    public String toStringReceive() {
		String s= "Process " + receiver + " receives from Process " + sender +" "+ message + " " +  clock.toString();
		return s;
	}

}
